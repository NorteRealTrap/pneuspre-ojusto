{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev -- --host 0.0.0.0 --port 5173",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "vercel/node@20.x",
      "memory": 256,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
