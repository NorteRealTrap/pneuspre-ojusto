PORT=3000
FRONTEND_URL=https://pneusprecojusto.vercel.app,http://localhost:5173
# Arquivo local do banner em backend/public/login-banner
LOGIN_BANNER_FILE=banner-login.jpg
# Fallback opcional por URL (usado se o arquivo local nao existir)
LOGIN_BANNER_IMAGE_URL=https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=1200&fit=crop

# Chave privada do gateway (backend only)
PAYMENT_API_KEY=your_private_payment_key
PAYMENT_WEBHOOK_SECRET=your_webhook_signature_secret
PAYMENT_ENV=sandbox
# Criptografia para arquivo protegido de submissao de checkout
# Pode ser uma chave HEX de 64 chars, base64 de 32 bytes ou texto (sera derivado com SHA-256).
CHECKOUT_PROTECTED_ENCRYPTION_KEY=replace_with_strong_random_secret
# Pasta de armazenamento local (backend). Padrao: .secure/checkout-checkpoints
CHECKOUT_PROTECTED_LOG_DIR=.secure/checkout-checkpoints

# Supabase para validacao de JWT
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
# Obrigatoria para operacoes administrativas de pagamento:
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
# Alias aceito em alguns ambientes (ex: Vercel):
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
