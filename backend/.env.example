PORT=3000
FRONTEND_URL=https://pneusprecojusto.vercel.app,http://localhost:5173
# Seguranca de proxy/cors/timeouts
TRUST_PROXY=loopback
ALLOW_VERCEL_PREVIEW_ORIGINS=false
REQUEST_TIMEOUT_MS=15000
# Arquivo local do banner em backend/public/login-banner
LOGIN_BANNER_FILE=banner-login.jpg
# Fallback opcional por URL (usado se o arquivo local nao existir)
LOGIN_BANNER_IMAGE_URL=https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=1200&fit=crop

# Chave privada do gateway (backend only)
PAYMENT_API_KEY=your_private_payment_key
PAYMENT_WEBHOOK_SECRET=your_webhook_signature_secret
PAYMENT_ENV=sandbox
BLACKCAT_API_URL=https://api.blackcat.com.br/v1
BLACKCAT_API_KEY=your_blackcat_private_key
WISE_ENV=sandbox
WISE_BASE_URL=https://api.wise-sandbox.com
# Opcao 1: token pessoal (small business)
WISE_API_TOKEN=
# Opcao 2: OAuth client credentials (parceiros/plataforma)
WISE_CLIENT_ID=
WISE_CLIENT_SECRET=
# Chave publica da Wise para validacao de assinatura de webhook (opcional)
WISE_WEBHOOK_PUBLIC_KEY=

# Supabase para validacao de JWT
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
# Obrigatoria para operacoes administrativas de pagamento:
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
